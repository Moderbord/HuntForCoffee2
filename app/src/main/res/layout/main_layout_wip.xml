<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.78"
                android:background="#121212"
                android:orientation="vertical">

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4" />

                <Button
                    android:id="@+id/mv_inventory_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:text="I"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/mv_character_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:text="C"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/mv_options_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:text="O"
                    android:textSize="12sp" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="#0c0c0c">

                <TextView
                    android:id="@+id/mv_main_textview"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:paddingBottom="15dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/mainText_string"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </ScrollView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.7"
                android:background="#212121"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mv_portrait_imageview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:background="#101010" />

                <ScrollView
                    android:id="@+id/scrollView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/mv_description_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.6"
                        android:maxWidth="115sp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="5dp"
                        android:text="Prince Charles"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#181818"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mv_location_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.55"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Location: Haven"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/mv_time_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.75"
                        android:gravity="center_vertical|bottom"
                        android:paddingLeft="10dp"
                        android:text="Time: 17:00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        android:typeface="monospace" />

                    <TextView
                        android:id="@+id/mv_date_textview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.70"
                        android:gravity="center_vertical|top"
                        android:paddingLeft="10dp"
                        android:text="Date: 04/05/16"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="10sp"
                        android:typeface="monospace" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:background="#141414"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp">

                    <Button
                        android:id="@+id/mv_button_1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="@string/b0_string"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="2"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="3"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="4"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="5"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="3dp">

                    <Button
                        android:id="@+id/mv_button_6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="6"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_7"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="7"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="8"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_9"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="9"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/mv_button_10"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.2"
                        android:text="10"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
